{
    "name": "pricewatch",
    "version": "1.0",
    "description": "an extension built with Angular",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "webNavigation",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js",
            "runtime.js"
        ]
    },
    "page_action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
          "matches": [
            "https://www.safeway.com/*"
          ],
          "js": [
            "content.js",
            "runtime.js"
          ],
          "css": [
            "styles.css"
          ]
        }
    ],
    "web_accessible_resources": ["index.html"]
}
